#include <stdio.h>
float c;
int porcentagem(float a, float b) {
    c = a + (a*b/100);
    
    return c;
}

int main()
{
    float x;
    float y;
    printf("Digite um valor: ");
    scanf("%f", &x);
    printf("Digite a porcentagem: ");
    scanf("%f", &y);
    porcentagem(x,y);
    printf("O valor final Ã©: %.2f", c);
    return 0;
}
