#include <stdio.h>

int main()
{
    int ma[2][2];
    int mb[2][2];
    int mc[2][2];
    
    int d,e;
    
    printf("Digite os números da primeira matriz: ");
    for(d=0;d<2;d++) {
        for(e=0;e<2;e++) {
            scanf("\n%d", &ma[d][e]);
        }
    }
    
    printf("\nDigite os números da segunda matriz: ");
    for(d=0;d<2;d++) {
        for(e=0;e<2;e++) {
            scanf("\n%d", &mb[d][e]);
        }
    }
    
    for(d=0;d<2;d++) {
        for(e=0;e<2;e++) {
            mc[d][e] = ma[d][e] + mb[d][e];
        }
    }
    
    printf("\nO Valor da soma das matrizes são: ");
    for(d=0;d<2;d++) {
        for(e=0;e<2;e++) {
            printf("\n%d",mc[d][e]);
        }
    }
    return 0;
}
